<div class="row-fluid">
  <div class="span12">
    <h3 class="heading"><%= @resource_title %></h3>
    <table class="table table-striped table-bordered dTableR" id="dt_category">
      <thead>
        <tr>
          <th>Nama Kategori</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        
      </tbody>
    </table>
  </div>
</div>
<!-- hide elements (for later use) -->
<div class="hide">
  <!-- actions for datatables -->
  <div class="dt_category_actions">
    <div class="btn-group">
        <%= link_to new_category_path, "data-tableid" => "dt_category", :class => "btn btn-primary" do %>
            <i class="icon-plus"></i> Kategori Baru
          <% end %>
    </div>
  </div>
  <!-- confirmation box -->
  <div id="confirm_dialog" class="cbox_content">
    <div class="sepH_c tac"><strong>Are you sure you want to delete this row(s)?</strong></div>
    <div class="tac">
      <a href="#" class="btn btn-gebo confirm_yes">Yes</a>
      <a href="#" class="btn confirm_no">No</a>
    </div>
  </div>
</div>

<%= javascript_include_tag "lib/datatables/jquery.dataTables.min" %>
<%= javascript_include_tag "lib/datatables/jquery.dataTables.sorting" %>
<%= javascript_include_tag "gebo_admin/gebo_tables" %>

<script type="text/javascript">
  //* gallery table view
  gebo_galery_table = {
    init: function() {
      $('#dt_category').dataTable({
        "bProcessing": true,
        "bServerSide": true,
        "sAjaxSource": "<%= categories_path %>",
        "sDom": "<'row'<'span6'<'dt_actions'>l><'span6'f>r>t<'row'<'span6'i><'span6'p>>",
        "sPaginationType": "bootstrap",
        // "aaSorting": [[ 1, "asc" ]],
        "aoColumns": [
          { "sType": "string" },
          { "sType": "string" },
          { "bSortable": false }
        ]
      });
      $('.dt_actions').html($('.dt_category_actions').html());
    }
  };
</script>